<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/gameCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/cardConstraint">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="top"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/title"
                    android:textAppearance="@style/title"
                    android:translationY="-0.57sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/gameImg"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/metacritic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/metacritic"
                    android:textAppearance="@style/metacritic"
                    app:layout_constraintEnd_toStartOf="@+id/some_id"
                    app:layout_constraintStart_toEndOf="@+id/gameImg"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <TextView
                    android:id="@+id/some_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="21dp"
                    android:gravity="right|center_vertical"
                    android:lineHeight="25sp"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/some_id"
                    android:textAppearance="@style/some_id"
                    app:layout_constraintStart_toEndOf="@+id/metacritic"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="36dp"
                    android:gravity="top"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/number"
                    android:textAppearance="@style/number"
                    android:translationY="-1.24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/gameImg"
                    app:layout_constraintTop_toBottomOf="@+id/metacritic" />

                <ImageView
                    android:id="@+id/gameImg"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@android:string/autofill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

